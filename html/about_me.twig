{% extends "layout.twig" %}

{% block content %}
    <form name="profile_form" id="cv_item_form" action="aboutme.php" method="post" class='edit' enctype="multipart/form-data">
        <div class='padder'>

            <div class="controls">
                
{#                 <a href="{{ site.researchweb_url }}/research.php?action=view&amp;type=researchers&amp;rid={{ profile.user_id }}" class="button"name="preview" id="bt-search" target="_blank"> #}
               <a title="Not yet implemented" class="button" name="preview" id="bt-search" target="_blank"> 
                    <span class="ui-icon ui-icon-search"></span> Preview on Web
                </a>
                <a href="#" class="button" name="savechanges" id="bt-save" onclick="document.forms['profile_form'].submit();">
                    <span class="ui-icon ui-icon-disk"></span>
                    Save Changes
                </a>
            </div>

            <div class='aboutme'>
                <br>
				<h3><span class='name'>Preferences</span></h3>
				<div  class='aboutme_section'>
					<table style="border:none;width:800px">
					<tr>
					<td style="width:300px;">
{# 					 <div style=" width:50%; display:inline-block"> #}
                       <span class='enfasis'>Visibility</span><br/>
                        <input 	type="checkbox" 
                        		name='show_checkbox' 
                        		onClick="document.forms['profile_form'].submit();" 
                        		{% if not profile.user_level %}checked{% endif %}/>
                         Show Profile On Web<br/>
                        <input type="hidden" name="action" value="update"><br/>
                    </div>

                    <div style="height:75px;   ">
                        <span class='enfasis'>Email Preferences</span><br/>

                        <input type="checkbox" name='events_checkbox'
                               onClick="document.forms['profile_form'].submit();"
                               title='Enable or disable the automatic emailing of event notifications'
                               {% if profile.mail_events %}checked{% endif %} />
                        <label for="events_checkbox"title="Enable or disable the automatic emailing of event notifications">
                            News &amp; Events
                        </label>
                        <br/>

                        <input type="checkbox"
                               name='deadlines_checkbox'
                               onClick="document.forms['profile_form'].submit();"
                               title='Enable or disable the automatic emailing of grant deadline notifications'
                               {% if profile.mail_deadlines %}checked{% endif %} />
                        <label title="Enable or disable the automatic emailing of grant deadline notifications" for="deadlines_checkbox">
                            Deadline Notifications</label>
                        <br/>
                    
                    </div> 
                   </td>
                   <td style="width:300px;">
                   <span class='enfasis'>Web Listing</span><br/>
                   The order of items listed on your web profile:<br />
                   <input type='radio' name='weborder' value='1' onClick="document.forms['profile_form'].submit();" {% if profile.weborder==1 %}checked{% endif %} title="This selection determines the order in which the items you choose are presented on the web. Categories will not show at all if no items are selected from the 'My Activities' section" for="weborder" /> Teaching-focused<br />
                   <input type='radio' name='weborder' value='2' onClick="document.forms['profile_form'].submit();" {% if profile.weborder==2 %}checked{% endif %} title="This selection determines the order in which the items you choose are presented on the web. Categories will not show at all if no items are selected from the 'My Activities' section" for="weborder" /> Scholarship-focused<br />
                   <input type='radio' name='weborder' value='3' onClick="document.forms['profile_form'].submit();" {% if profile.weborder==3 %}checked{% endif %} title="This selection determines the order in which the items you choose are presented on the web. Categories will not show at all if no items are selected from the 'My Activities' section" for="weborder" /> Engagement-focused<br />
                  <br />
                   <input type="checkbox"
                               name='combinepubs'
                               onClick="document.forms['profile_form'].submit();"
                               title='Show combined Recent Publications rather than separate'
                               {% if profile.combinepubs %}checked{% endif %} />
                        <label title="Show combined Recent Publications rather than separate" for="combine_pubs">
                            Combine Publications</label>
                        <br/>

                   </td>
                   </tr>
                    </table>

				</div>
				
                <h3 style="padding-top:15px;"><span class='name'>General Information</span></h3>

                <div class='aboutme_section'>
                    <table style="border:none;width:800px">
                        <tr>
                            <td>
                                <span class='enfasis'>First Name</span>
                                <br/>
                                <input type="text"
                                       onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
                                       name="first_name"
                                       id="first_name"
                                       title="first name"
                                       value="{{ profile.first_name }}"
                                       style="width:300px;font-size: 13px; font-family:monospace;" />
                            </td>
                            <td>
                                <span class='enfasis'>Office</span>
                                <br/>
                                <input type="text"
                                       onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
                                       name="office"
                                       id="office"
                                       title="office location"
                                       value="{{ profile.office }}"
                                       style="width:300px;font-size: 13px; font-family:monospace;"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span class='enfasis'>Last Name</span>
                                <br/>
                                <input type="text"
                                       onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
                                       name="last_name"
                                       id="last_name"
                                       title="last name"
                                       value="{{ profile.last_name }}"
                                       style="width:300px;font-size: 13px; font-family:monospace;"/>
                            </td>
                            <td>
                                <span class='enfasis'>Phone</span>
                                <br/>
                                <input type="text"
                                       onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
                                       name="phone"
                                       id="phone"
                                       title="phone number"
                                       value="{{ profile.phone }}"
                                       style="width:300px;font-size: 13px; font-family:monospace;"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span class='enfasis'>Title</span>
                                <br/>
                                <input type="text"
                                       onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
                                       name="title"
                                       id="title"
                                       title="job title"
                                       value="{{ profile.title }}"
                                       style="width:300px;font-size: 13px; font-family:monospace;"/>
                            </td>
                            <td>
                                <span class='enfasis'>Fax</span>
                                <br/>
                                <input type="text"
                                       onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
                                       name="fax"
                                       id="fax"
                                       title="fax number"
                                       value="{{ profile.fax }}"
                                       style="width:300px;font-size: 13px; font-family:monospace;"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span class='enfasis'>Secondary Title</span>
                                <br/>
                                <input type="text"
                                       onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
                                       name="secondary_title"
                                       id="secondary_title"
                                       title="secondary title"
                                       value="{{ profile.secondary_title }}"
                                       style="width:300px;font-size: 13px; font-family:monospace;"/>
                            </td>
                            <td>
                                <span class='enfasis'>Email</span>
                                <br/>
                                <input type="text"
                                       onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
                                       name="email"
                                       id="email"
                                       title="email"
                                       value="{{ profile.email }}"
                                       style="width:300px;font-size: 13px; font-family:monospace;"/>
                            </td>
                        </tr>
                        <tr>
                            <td> 
                            	<span class='enfasis'>Department</span>
                                <br/>
                                <select name="department_id"
                                        onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges.disabled=false"
                                        title="home department" style="width:300px; font-size: 13px; font-family:monospace;">
                                    <option value="0">- Select a home Department -</option>
                                    {% for department in profile.home_dept %}
                                        <option value="{{ department.department_id }}" {{ department.department_selected }}>{{ department.department_name }}</option>
                                    {% endfor %}
                                </select>
                            </td>
                            <td>
                                <span class='enfasis'>Personal Homepage</span>
                                <br/>
                                <input type="text"
                                       onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
                                       name="homepage"
                                       id="homepage"
                                       maxlength="255"
                                       title="personal webpage"
                                       value="{{ profile.homepage }}"
                                       style="width:300px; font-size: 13px; font-family:monospace;"/>
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                        </tr>
{#
                        <tr>
                            <td>
                                <span class='enfasis'>Appointment Category</span>
                                <br/>
                                <select id="status"
                                        name="status"
                                        class="smallField"
                                        onClick="document.profile_form.savechanges.disabled=false;"
                                        style="width:300px; font-size: 13px; font-family:monospace;">
                                    {% for status in profile.status %}
                                        <option value="{{ status.value }}" {{ status.selected }}>{{ status.name }}</option>
                                    {% endfor %}
                                </select>
                            </td>
                            <td>
                                <span class='enfasis'>Work Pattern</span>
                                <br/>
                                <select id="work_pattern"
                                        name="work_pattern"
                                        class="smallField"
                                        onClick="document.profile_form.savechanges.disabled=false;"
                                        style="width:300px; font-size: 13px; font-family:monospace;">
                                    {% for pattern in profile.work_pattern %}
                                        <option value="{{ pattern.value }}" {{ pattern.selected }}>{{ pattern.name }}</option>
                                    {% endfor %}
                                </select>
                            </td>
                        </tr>
#}
                        <tr>
                            <td>
                               
                            </td>
{#
                            <td>
                                <span class='enfasis'>Cross-Appointed Dept.</span>
                                <br/>
                                <select name="department2_id"
                                        onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges.disabled=false"
                                        title="secondary department"
                                        style="width:300px;font-size: 13px; font-family:monospace;">
                                    <option value="0">- Select a secondary Department -</option>
                                    {% for department in profile.second_dept %}
                                        <option value="{{ department.department_id }}" {{ department.department_selected }}>{{ department.department_name }}</option>
                                    {% endfor %}
                                </select>
                            </td>
#}
                       
                       
                    </table>
                </div>

                <div class='clear'></div>
                <br/>

                <h3>Descriptions</h3>
                <div class="aboutme_section">
                   <table style="border:none;width:800px">
                   		<tr>
                   			<td>
                   				<span class='enfasis'>My Picture</span><br/>
                   			</td>
                   		</tr>
                   		<tr>
                   			<td>
                   			    &nbsp;&nbsp;&nbsp;&nbsp;<img height='139' width='180'  src='{{ profile.image }}' /><br/>
                   			    
                   			   
                   			</td>
                   			<td>
                   			Upload a new profile picture: 
                   			<input 	type='file' 
                   					size='40' 
				   					onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
				   					name="mypic"
				   					id="mypic"
				   					title="my picture"
                             /><br/>
                   			<i><span style='font-size:11px; line-height:13px;'>Please upload a high-resolution image (4:3 width:height). After uploading you'll see a 'quick' version on the left. We'll redo it manually later to make it look the best it can.</span></i>
                   			</td>
                   		</tr>
                   		<tr>
                   			<td>
                   				
                   				<span class='enfasis'>Summary Profile (for listing)</span><br/>
                        <textarea name="profile_short"
                                  onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
                                  id="profile_short"
                                  title="short profile statement (will be used in listings)"
                                  style="width:400px;height:75px; font-size: 0.9em; font-family:monospace;">{{ profile.profile_short }}</textarea>
                   			</td>
                   			<td>
                   				<span class='enfasis'>Keywords</span><br/>
                   				<textarea name="keywords"
                                  onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
                                  id="keywords"
                                  title="keywords"
                                  style="width:400px;height:75px; font-size: 0.9em; font-family:monospace;">{{ profile.keywords }}</textarea>
                   		</tr>
                   		<tr>
                   			<td colspan='2'>
                   				<span class='enfasis'>Teaching Profile</span><br/>
                   				 <textarea id="ar_profile"
                                          name="ar_profile"
                                          style="height:150px; width:100%"
                                          maxlength="2000"
                                          title="Highlight teaching, scholarship and service (if appropriate): describe yourself">{{ profile.ar_profile }}</textarea>
                   			</td>
                   		</tr>
                   		<tr>
                   			<td colspan='2'>
                   				<span class='enfasis'>Scholarship Profile</span><br/>
                   				 <textarea name="profile_ext"
                                  onClick="document.profile_form.savechanges.disabled=false; document.profile_form.savechanges2.disabled=false"
                                  id="profile_ext"
                                  title="full profile statement (will be used when viewing the detailed profile)"
                                  style="width:800px;height:125px; font-size: 13px; font-family:monospace;">{{ profile.profile_ext }}</textarea>
                   			</td>
                   		</tr>
                   			
                   </table>
                </div>

                <div style="clear:both; margin-left: 350px">
                    <br/>
                    <a href="#" class="button" name="savechanges" id="bt-save2" onclick="document.forms['profile_form'].submit();">
                        <span class="ui-icon ui-icon-disk"></span> Save Changes
                    </a>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
